<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:minHeight="48dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_journey_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:contentDescription="Journey duration" />

            <TextView
                android:id="@+id/item_journey_modes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:ellipsize="end"
                android:maxLines="1"
                android:contentDescription="Modes summary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_journey_step_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/teal_200"
                android:textAppearance="?attr/textAppearanceCaption"
                android:contentDescription="Step-free badge" />

            <TextView
                android:id="@+id/item_journey_lift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/teal_200"
                android:textAppearance="?attr/textAppearanceCaption"
                android:contentDescription="Lift disruption badge" />

            <TextView
                android:id="@+id/item_journey_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/chip_background"
                android:text="Bus included"
                android:textAppearance="?attr/textAppearanceCaption"
                android:visibility="gone"
                android:contentDescription="Bus included in route" />

            <TextView
                android:id="@+id/item_journey_rank_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textAppearance="?attr/textAppearanceCaption"
                android:ellipsize="end"
                android:maxLines="2"
                android:contentDescription="Why this route ranked" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
