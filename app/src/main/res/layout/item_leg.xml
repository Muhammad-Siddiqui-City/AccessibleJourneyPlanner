<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingEnd="16dp"
    android:minHeight="56dp">

    <!-- Timeline: dot + vertical line -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp"
        android:minHeight="64dp">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/timeline_dot"
            android:contentDescription="Timeline step" />

        <View
            android:id="@+id/item_leg_line"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="16dp"
            android:background="@drawable/timeline_line"
            android:contentDescription="Timeline connector" />
    </LinearLayout>

    <!-- Leg content card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:minHeight="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_leg_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    android:contentDescription="Transport mode" />

                <TextView
                    android:id="@+id/item_leg_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:contentDescription="Leg duration" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_leg_from_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:ellipsize="end"
                android:maxLines="2"
                android:contentDescription="From and to stops" />

            <TextView
                android:id="@+id/item_leg_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceCaption"
                android:ellipsize="end"
                android:maxLines="2"
                android:contentDescription="Leg instruction" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
